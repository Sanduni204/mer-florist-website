# Example .env for mer-florist-website
# Copy this file to `.env` and update the values for your environment.

# Base URL for the site (include trailing slash)
APPURL=http://localhost/mer_ecommerce/

# Database connection (MySQL/MariaDB)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=mer
DB_USER=root
DB_PASS=

# Optional: set to 1 to enable verbose DB connection errors during development
# (don't enable in production)
DEV_DEBUG=0
